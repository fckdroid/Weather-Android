<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical"
                                             tools:layout_editor_absoluteX="0dp"
                                             tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/fragment_weather_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorGreyMd600"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="A"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <sasd97.java_blog.xyz.richtextview.RichTextView
        android:id="@+id/fragment_weather_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:textColor="@color/colorGreyMd600"
        android:textSize="45sp"
        android:visibility="visible"
        app:fontAsset="weather_icons.ttf"
        app:layout_constraintBottom_toTopOf="@+id/fragment_weather_type"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="W"/>

    <sasd97.java_blog.xyz.richtextview.RichTextView
        android:id="@+id/fragment_weather_wind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:gravity="end"
        android:textSize="15sp"
        app:fontAsset="weather_icons.ttf"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/fragment_weather_pressure"
        tools:text="1 mPa"/>

    <sasd97.java_blog.xyz.richtextview.RichTextView
        android:id="@+id/fragment_weather_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:textSize="15sp"
        app:fontAsset="weather_icons.ttf"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/fragment_weather_last_refresh"
        tools:text="15 m/s"/>

    <sasd97.java_blog.xyz.richtextview.RichTextView
        android:id="@+id/fragment_weather_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textSize="15sp"
        app:fontAsset="weather_icons.ttf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_weather_wind_speed"
        tools:text="21%"/>

    <sasd97.java_blog.xyz.richtextview.RichTextView
        android:id="@+id/fragment_weather_temperature_extreme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="15sp"
        app:fontAsset="weather_icons.ttf"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_weather_vertical_delimiter"
        app:layout_constraintRight_toRightOf="@+id/fragment_weather_vertical_delimiter"
        app:layout_constraintTop_toBottomOf="@+id/fragment_weather_vertical_delimiter"
        tools:text="27 °C\n27 °C"/>

    <sasd97.java_blog.xyz.richtextview.RichTextView
        android:id="@+id/fragment_weather_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textColor="@color/colorGreyMd600"
        android:textSize="20sp"
        app:fontAsset="weather_icons.ttf"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_weather_vertical_delimiter"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_weather_vertical_delimiter"
        app:layout_constraintRight_toRightOf="@+id/fragment_weather_vertical_delimiter"
        tools:text="27 °C"/>

    <View
        android:id="@+id/fragment_weather_vertical_delimiter"
        android:layout_width="60dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toRightOf="@+id/fragment_weather_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/fragment_weather_last_refresh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Last refresh Sun, 21"/>

</android.support.constraint.ConstraintLayout>