<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_navigation_layout"
    android:layout_width="@dimen/drawer_width"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/fragment_navigation_navview"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/fragment_navigation_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:paddingRight="56dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/navigation_fragment_settings"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/fragment_navigation_about"
            android:layout_toEndOf="@+id/fragment_navigation_about"/>

        <ImageView
            android:id="@+id/fragment_navigation_about"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/ic_action_about"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_navigation_recycler_cities"
        android:layout_width="320dp"
        android:overScrollMode="never"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_navigation_navview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="0dp"/>
</android.support.constraint.ConstraintLayout>